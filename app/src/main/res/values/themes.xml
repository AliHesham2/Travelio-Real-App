<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.Bezo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mix9</item>
        <item name="colorPrimaryVariant">@color/Mix9</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <!-- Text Field. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/Mix9</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <!-- Over Flow Menu -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Text Field -->
    <style name="textfield" parent="Theme.MaterialComponents.Light">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>
    <!-- End. -->


    <!-- Card View 3 -->
    <style name="CustomCardGroups" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card.Media_G</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media_G" parent="">
        <!-- name="cornerFamily">rounded</ -->
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!-- End. -->

</resources>